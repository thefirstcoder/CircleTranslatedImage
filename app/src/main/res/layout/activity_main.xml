<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.circletranslationdemo.MainActivity">

    <com.example.administrator.circletranslationdemo.CircleImageView
        android:background="@color/colorPrimary"
        android:id="@+id/moveIV"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/psb" />
    <com.example.administrator.circletranslationdemo.CircleView
        android:layout_above="@+id/moveIV"
        android:layout_centerInParent="true"
        android:src="@mipmap/psb"
        android:background="@color/colorAccent"
        android:layout_width="25dp"
        android:layout_height="25dp" />
</RelativeLayout>
